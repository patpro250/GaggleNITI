model BookCopy {
  id               String         @id @unique @default(uuid())
  bookId           String     
  status           BookCopyStatus @default(AVAILABLE)
  libraryId        String
  condition        Condition      @default(NEW)
  dateOfAquisition DateTime
  code             String?  
  book             Book           @relation("BookCopy", fields: [bookId], references: [id])
  circulation      Circulation[]  @relation("BookCopy")
  bookR            Library        @relation("BookCopy", fields: [libraryId], references: [id])
  interLibrary     InterLibrary?  @relation("InterLibrarybookCopy")
  reservation      Reservation[]   @relation("Reservation")

  @@map("BookCopys")
}

enum BookCopyStatus {
  AVAILABLE
  DONATED
  REQUESTED
  CHECKEDOUT
  INTRANSIT
  ONHOLD
  REFERENCEONLY
  INARCHIVES
  RESTRICTEDACCESS
  ONDISPLAY
  MISSING
  PROCESSING
  RESERVED
}

enum Condition {
  NEW
  GOOD
  DAMAGED
}
