model Member {
  id             String         @id @default(uuid())
  firstName      String
  lastName       String
  email          String         @unique
  dateOfBirth    DateTime
  phone          String
  gender         Gender
  address        Json
  memberShipType MembershipType
  status         MemberStatus   @default(ACTIVE)
  profile        Json
  joinedAt       DateTime       @default(now())
  password       String
  reservation    Reservation[]  @relation("Reservation")
  member         Circulation[]  @relation("incirculation")

  @@index([email])
  @@index([firstName, lastName])
  @@map("members")
}

enum MembershipType {
  STUDENT
  REGULAR
  SENIOR
  PREMIUM
  TEMPORARY
  LIFETIME
  FAMILY
  CORPORATE
  VIP
}

enum MemberStatus {
  ACTIVE
  INACTIVE
  PENDING
  SUSPENDED
  BANNED
  EXPIRED
  ON_HOLD
  DECEASED
  BLACKLISTED
  PROBATION
  GUEST
  FROZEN
}
