model InterLibrary {
  id         String             @id @default(uuid())
  lenderId   String
  borrowerId String
  bookId     String             @unique
  borrowDate DateTime           @default(now())
  returnDate DateTime?
  dueDate    DateTime
  status     interLibraryStatus
  book       BookCopy           @relation("InterLibrarybookCopy", fields: [bookId], references: [id])
  borrower   Institution        @relation("InterLibraryBorrowerId", fields: [borrowerId], references: [id])
  lender     Institution        @relation("InterLibraryLender", fields: [lenderId], references: [id])
}

enum interLibraryStatus {
  PENDING
  APPROVED
  REJECTED
  RETURNED
}
