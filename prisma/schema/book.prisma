model Book {
  id                 String       @id @default(uuid())
  title              String
  author             String
  publisher          String
  published          DateTime
  firstAcquisition    DateTime
  isbn               String?
  language           String
  edition            String?
  numberOfPages      Int
  shelfLocation      String
  callNo             String?
  barCode            String?
  ddcCode            String?
  institutionId      String
  genreId            Int?
  placeOfPublication String?
  acquisition         Acquisition[] @relation("Acquisition")
  bookCopy           BookCopy[]   @relation("BookCopy")
  genre              Genre?       @relation("Genres", fields: [genreId], references: [id])
  institution        Institution? @relation("Book", fields: [institutionId], references: [id], onDelete: Cascade)

  @@map("books")
}
