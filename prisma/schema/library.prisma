model Library {
  id            String      @id @unique @default(uuid())
  name          String
  directorId    String?     @unique
  institutionId String
  shelvesNo     Int
  status        Status      @default(ACTIVE)
  createdAt     DateTime    @default(now()) @db.Timestamp(6)
  updatedAt     DateTime    @updatedAt @db.Timestamp(6)
  type          String
  librarians    Librarian[] @relation("LibraryLibrarians")
  bookCopy      BookCopy[]  @relation("BookCopy")
  institution   Institution @relation("institution", fields: [institutionId], references: [id])
  director      Librarian?   @relation("LibraryDirector", fields: [directorId], references: [librarianId])

  @@map("libraries")
}
